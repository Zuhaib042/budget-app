<h1 class="text-2xl font-bold text-text text-center"> Transactions</h1>
<h1>Hello</h1>
<% @entities.each do |entity| %>
  <div class="flex justify-between items-center">
    <div class="flex items-center gap-3 my-3">
      <%= entity.name %>
    </div>
    <div class="flex gap-2">
      <%= link_to "Edit", edit_group_entity_path(@group, entity), class: "font-medium p-1 rounded bg-blue-500 text-white dark:text-white hover:underline" %>
      <%= link_to "Delete", group_entity_path(@group, entity), data:  { turbo_method: :delete }, class: "font-medium p-1 rounded bg-red-500 text-white dark:text-white hover:underline" %>
    </div>
  </div>
<% end %>
<div class="fixed bottom-0 left-0 right-0 sm:mx-20 py-8 flex">
  <%= link_to 'New Category', new_group_entity_path(@group) ,  class: 'w-full bg-second focus:bg-green-500 hover:bg-lightgreen-700 text-white py-2 px-4 text-center font-semibold' %>
</div>
